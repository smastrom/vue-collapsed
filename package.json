{
	"name": "vue-collapsed",
	"version": "0.9.9",
	"description": "Dynamic CSS height transition from 0 to auto and vice versa for Vue 3. Accordion ready.",
	"author": {
		"name": "Simone Mastromattei",
		"email": "smastrom@proton.me"
	},
	"license": "MIT",
	"homepage": "https://vue-collapsed.netlify.app/",
	"repository": {
		"type": "git",
		"url": "https://github.com/smastrom/vue-collapsed.git"
	},
	"keywords": [
		"vue collapse",
		"vue-collapse",
		"vue accordion",
		"vue-accordion",
		"collapse",
		"accordion",
		"vue component",
		"vue-component"
	],
	"main": "dist/index.umd.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"bugs": {
		"url": "https://github.com/smastrom/vue-collapsed/issues"
	},
	"files": [
		"dist/*"
	],
	"scripts": {
		"dev": "vite",
		"build": "rimraf dist && run-p type-check build-only",
		"build:app": "vite build --mode app",
		"preview": "vite preview",
		"test": "cypress run --component",
		"test:dev": "cypress open --component",
		"build-only": "vite build",
		"type-check": "vue-tsc --noEmit -p tsconfig.cypress-ct.json --composite false",
		"lint": "eslint . --ext .vue,.js,.cjs,.ts, --fix --ignore-path .gitignore",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{vue,ts,js,cjs,json}": "prettier --write"
	},
	"devDependencies": {
		"@babel/types": "^7.20.2",
		"@playwright/experimental-ct-vue": "^1.28.0",
		"@rushstack/eslint-patch": "^1.1.4",
		"@types/node": "^16.11.68",
		"@vitejs/plugin-vue": "^3.1.2",
		"@vue/eslint-config-prettier": "^7.0.0",
		"@vue/eslint-config-typescript": "^11.0.0",
		"@vue/tsconfig": "^0.1.3",
		"cypress": "^10.10.0",
		"eslint": "^8.22.0",
		"eslint-plugin-cypress": "^2.12.1",
		"eslint-plugin-vue": "^9.3.0",
		"husky": "^8.0.0",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"typescript": "~4.7.4",
		"vite": "^3.1.8",
		"vite-plugin-dts": "^1.7.1",
		"vue": "^3.2.26",
		"vue-tsc": "^1.0.8"
	},
	"peerDependencies": {
		"vue": ">=3.0.0"
	},
	"dependencies": {
		"rollup-plugin-terser": "^7.0.2"
	}
}
